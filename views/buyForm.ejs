<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Livres par Genre</title>
    <link rel="stylesheet" href="/style.css">
    <!-- Inclure Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <!-- Style personnalisé -->
    <style>
        .filter-input {
            margin: 0 10px; /* Marge entre les champs */
            padding: 8px;  /* Espace à l'intérieur des champs */
            border: 1px solide #ccc; /* Bordure grise claire */
            border-radius: 5px; /* Coins arrondis */
        }

        .filter-section {
            display: flex; /* Pour aligner les champs sur la même ligne */
            justify-content: space-between; /* Espace égal entre les éléments */
            align-items: center; /* Alignement vertical centré */
            padding: 10px; /* Espace autour de la section */
            background-color: #f8f9fa; /* Couleur de fond gris clair */
        }

        .filter-section label {
            font-weight: bold; /* Texte en gras */
        }
    </style>
</head>
<body>
    <%- include('nav.ejs') %>

    <!-- Champs de filtrage alignés sur une même ligne -->
    <div class="filter-section">
        <div>
            <label for="filterTitle">Filter by Title:</label>
            <input type="text" id="filterTitle" class="filter-input" placeholder="Enter title to filter...">
        </div>
        <div>
            <label for="filterCategory">Filter by Category:</label>
            <input type="text" id="filterCategory" class="filter-input" placeholder="Enter category to filter...">
        </div>
    </div>

    <div class="category-cards">
        <% books.forEach(book => { %>
            <div class="card" data-title="<%= book.title.toLowerCase() %>" data-category="<%= book.genre.categories.toLowerCase() %>">
                <div class="card-body">
                    <% if (book.image) { %>
                        <img src="/<%= book.image %>" alt="Image du genre" class="card-img">
                    <% } %>
                </div>
                <div class="card-body">
                    <p class="card-title"><%= book.title %></p>
                    <p class="card-title"><%= book.price %></p>
                    <p class="card-title"><%= book.ISBN %></p>
                    <p class="card-title"><%= book.genre.categories %></p>
                </div>
                <button class="btn btn-primary buy-button" data-toggle="modal" data-target="#buyModal">Buy now!</button>
            </div>
        <% }); %>
    </div>

    <!-- Modal pour acheter un livre -->
    <div class="modal fade" id="buyModal" tabindex="-1" role="dialog" aria-labelledby="buyModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="buyModalLabel">Buy Book</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="buyForm">
              <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" required>
              </div>
              <div class="form-group">
                <label for="numeroCart">Card Number:</label>
                <input type="text" class="form-control" id="numeroCart" required>
              </div>
              <div class="form-group">
                <label for="address">Address:</label>
                <input type="text" class="form-control" required>
              </div>
              <div class="form-group">
                <label for "quantite">Quantity:</label>
                <input type="number" class="form-control" required value="1">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary" form="buyForm">Buy</button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Script de filtrage -->
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const filterTitle = document.getElementById("filterTitle");
            const filterCategory = document.getElementById("filterCategory");
            const cards = document.querySelectorAll(".card");

            function filterCards() {
                const filterTitleText = filterTitle.value.toLowerCase();
                const filterCategoryText = filterCategory.value.toLowerCase();

                cards.forEach(card => {
                    const title = card.getAttribute("data-title");
                    const category = card.getAttribute("data-category");

                    const titleMatches = title.includes(filterTitleText);
                    const categoryMatches = category.includes(filterCategoryText);

                    if (titleMatches && (categoryMatches || filterCategoryText === "")) {
                        card.style.display = "block";
                    } else {
                        card.style.display = "none";
                    }
                });
            }

            filterTitle.addEventListener("keyup", filterCards);
            filterCategory.addEventListener("keyup", filterCards);

            const buyForm = document.getElementById("buyForm");

            buyForm.addEventListener("submit", function(e) {
                e.preventDefault();

                if (!buyForm.checkValidity()) {
                    alert("Please fill in all required fields.");
                    return;
                }

                const formData = {
                    name: buyForm.querySelector('#name').value,
                    numeroCart: buyForm.querySelector('#numeroCart').value,
                    address: buyForm.querySelector('#address').value,
                    quantite: buyForm.querySelector('#quantite').value,
                };

                fetch("/client/addClient", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(formData),
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    alert(data.message);
                    $('#buyModal').modal('hide'); 
                })
                .catch(error => {
                    console.error("Error:", error);
                });
            });
        });
    </script>
    
</body>
</html>
